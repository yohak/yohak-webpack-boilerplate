{
  "name": "yohak-webpack-boilerplate",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Satoshi Onoda",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "webpack": "MODE=development webpack",
    "serve": "MODE=development SERVER=browserSync webpack",
    "serve-hot": "MODE=development SERVER=webpack webpack serve",
    "build": "webpack",
    "test": "vitest",
    "webp": "node bundler/webp/index.mjs",
    "stylelint": "stylelint  --fix './src/**/*.{css,scss}'",
    "lint": "eslint  --fix './src/**/*.{ts,tsx,js,jsx,cjs,mjs}'",
    "format": "prettier --write './src/**/*.{ts,tsx,js,jsx,cjs,mjs,css,scss,pug,php,json}'"
  },
  "lint-staged": {
    "*.{pug,json,php}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint  --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "@prettier/plugin-pug": "^3.0.0",
    "@types/browser-sync": "^2.29.0",
    "@types/browser-sync-webpack-plugin": "^2.2.5",
    "@types/imagemin-webp": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "ansis": "^3.2.0",
    "browser-sync": "^3.0.2",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^10.3.10",
    "happy-dom": "^14.12.3",
    "husky": "^9.0.11",
    "image-minimizer-webpack-plugin": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^8.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "pug-plugin": "^4.9.9",
    "raw-loader": "^4.0.2",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "stylelint": "^16.2.1",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.2.0",
    "sucrase": "^3.35.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^2.0.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "webpack-livereload-plugin": "github:satoshionoda/webpack-livereload-plugin#ignore-hash-comparison",
    "webpackbar": "^6.0.1"
  }
